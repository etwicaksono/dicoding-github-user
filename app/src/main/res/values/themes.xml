<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_200</item>
        <item name="colorPrimaryVariant">@color/grey_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_200</item>
        <item name="colorSecondaryVariant">@color/green_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="black_bold_33" parent="Theme.GithubUser">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">33sp</item>
    </style>

    <style name="black_bold_23" parent="Theme.GithubUser">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="black_15" parent="Theme.GithubUser">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="grey_500_bold_33" parent="Theme.GithubUser">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">33sp</item>
    </style>

    <style name="grey_500_bold_23" parent="Theme.GithubUser">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">23sp</item>
    </style>

    <style name="grey_500_15" parent="Theme.GithubUser">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="detail_page_app_bar" parent="Theme.GithubUser">
        <item name="android:background">@color/white</item>
    </style>
</resources>